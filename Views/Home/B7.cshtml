@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Bài tập 7 - Game Lật Hình</title>
    <style>
        body {
            font-family: sans-serif;
            text-align: center;
            background-color: #f0f0f0;
        }

        .game-container {
            margin: 20px auto;
            width: 404px;
            height: 404px;
            
            background-image: url('https://picsum.photos/400/400');
            background-size: cover;
            border: 2px solid #333;
            position: relative;
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            grid-template-rows: repeat(2, 1fr);
            gap: 4px;
        }

        .tile {
            width: 200px;
            height: 200px;
            cursor: pointer;
            transition: opacity 0.5s;
            display: flex;
            justify-content: center;
            align-items: center;
            font-size: 48px;
            color: white;
            font-weight: bold;
        }
       
        .tile-1 {
            background-color: #f7b731;
        }

        .tile-2 {
            background-color: #88b04b;
        }

        .tile-3 {
            background-color: #d11141;
        }

        .tile-4 {
            background-color: #00b159;
        }
    </style>
</head>
<body>
    <h2>Game Lật Hình</h2>
    <p>Click vào các ô để xem ảnh nền bên dưới.</p>

    <div class="game-container">
        <div class="tile tile-1" onclick="hideTile(this)">1</div>
        <div class="tile tile-2" onclick="hideTile(this)">2</div>
        <div class="tile tile-3" onclick="hideTile(this)">3</div>
        <div class="tile tile-4" onclick="hideTile(this)">4</div>
    </div>
    <br>
    <button onclick="resetGame()">Chơi lại</button>

    <script>
       
        function hideTile(element) {
            element.style.opacity = '0';
        }

       
        function resetGame() {
            const tiles = document.querySelectorAll('.tile');
            tiles.forEach(function(tile) {
                tile.style.opacity = '1';
            });
        }
    </script>
</body>
</html>