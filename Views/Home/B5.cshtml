<!DOCTYPE html>
<html>
<head>
    <title>Bài tập 5 - Giải phương trình bậc 2</title>
</head>
<body>
    <h3>Giải phương trình: ax² + bx + c = 0</h3>
    <p>
        <input type="text" id="a" size="5"> x² +
        <input type="text" id="b" size="5"> x +
        <input type="text" id="c" size="5"> = 0
    </p>
    <button onclick="giaiPhuongTrinh()">Giải phương trình</button>
    <p id="ketQua"></p>

    <script>
        function giaiPhuongTrinh() {
            var a = parseFloat(document.getElementById('a').value);
            var b = parseFloat(document.getElementById('b').value);
            var c = parseFloat(document.getElementById('c').value);
            var ketQua = document.getElementById('ketQua');

            if (isNaN(a) || isNaN(b) || isNaN(c)) {
                ketQua.innerText = "Vui lòng nhập đủ các hệ số a, b, c.";
                return;
            }

            if (a == 0) {
                if (b == 0) {
                    ketQua.innerText = (c == 0) ? "Phương trình có vô số nghiệm." : "Phương trình vô nghiệm.";
                } else {
                    ketQua.innerText = "Phương trình có một nghiệm: x = " + (-c / b);
                }
                return;
            }

            var delta = b*b - 4*a*c;
            if (delta > 0) {
                var x1 = (-b + Math.sqrt(delta)) / (2*a);
                var x2 = (-b - Math.sqrt(delta)) / (2*a);
                ketQua.innerText = "Phương trình có 2 nghiệm phân biệt: x1 = " + x1 + ", x2 = " + x2;
            } else if (delta == 0) {
                var x = -b / (2*a);
                ketQua.innerText = "Phương trình có nghiệm kép: x1 = x2 = " + x;
            } else {
                ketQua.innerText = "Phương trình vô nghiệm.";
            }
        }
    </script>
</body>
</html>
