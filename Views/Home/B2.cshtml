@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Bài tập 2 - Đổi màu Div</title>
    <style>
        .box {
            width: 100px;
            height: 50px;
            border: 1px solid black;
            margin: 5px;
            display: inline-block;
            text-align: center;
            line-height: 50px;
        }
    </style>
</head>
<body>
    <h2>Đổi màu các thẻ Div chẵn lẻ</h2>
    <button onclick="doiMau()">Đổi màu</button>
    <hr>
    <div class="box">Div 1</div>
    <div class="box">Div 2</div>
    <div class="box">Div 3</div>
    <div class="box">Div 4</div>
    <div class="box">Div 5</div>
    <div class="box">Div 6</div>
    <div class="box">Div 7</div>
    <div class="box">Div 8</div>
    <div class="box">Div 9</div>
    <div class="box">Div 10</div>

    <script>
        function doiMau() {
            var divs = document.getElementsByClassName('box');
            for (var i = 0; i < divs.length; i++) {
                
                if (i % 2 == 0) {
                    divs[i].style.backgroundColor = 'blue'; 
                } else {
                    divs[i].style.backgroundColor = 'red'; 
                }
            }
        }
    </script>
</body>
</html>
